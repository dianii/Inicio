<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Inicio"
             x:Class="Inicio.MainPage">

    <ScrollView >
        <StackLayout  BackgroundColor="Blue" Margin="0,10,0,10" Padding="0,10,0,0">
            <StackLayout >
                <Image  Source="Imagen.png " HorizontalOptions="Center">
                 </Image>
            </StackLayout>
            <Label TextColor="Violet" FontSize="40" HorizontalOptions="Center"></Label>
        </StackLayout>
        <TableView Intent="Form" HasUnevenRows="True">
            <BoxView></BoxView>
            <TableSection Title="Usuario" >
                <EntryCell x:Name="Edad" Text="Edad" Detail="ingrese la edad"></EntryCell>
                <EntryCell x:Name="Intereses" Text="intereses" Detail="ingrese sus intereses"></EntryCell>
                <EntryCell x:Name="Aprende" Text="Aprende" Detail="ingrese sus intereses"></EntryCell>
                <EntryCell x:Name="Otro" Text="Otro" Detail="ingrese otro"></EntryCell>

            </TableSection>
            </TableView>

    </ScrollView>
    

</ContentPage>
